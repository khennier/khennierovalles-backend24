<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/src/public/styles.css">
</head>
<body>
    <div class="container">
        <h1>Login</h1>
        <form id="loginForm">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Login</button>
        </form>
        <p>¿No tienes una cuenta? <a href="/register">Regístrate aquí</a></p>
    </div>

    <script>
        // Agregar un listener al formulario para manejar el login mediante fetch y almacenar el token
document.getElementById('loginForm').addEventListener('submit', function(event) {
    event.preventDefault();  // Evitar que el formulario se envíe de manera tradicional

    const email = document.getElementById('email').value;
    const password = document.getElementById('password').value;

    // Realizar la petición fetch al backend
    fetch('/api/auth/login', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ email, password })
    })
    .then(response => response.json())
    .then(data => {
        if (data.token) {
            localStorage.setItem('token', data.token);  // Almacenar el token en el localStorage
            alert('Login exitoso');
            window.location.href = '/';  // Redirigir a la página principal
        } else {
            alert('Error en el login: ' + data.error);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Error al iniciar sesión');
    });
});

    </script>
</body>
</html>

